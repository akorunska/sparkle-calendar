<% include partials/header %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <script src="/jq/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>

    <link rel=icon href=favicon.ico sizes="16x16" type="image/png">
    <!--<link rel="stylesheet" href="stylesheets/form.css">-->
</head>
<body>
<div class="container-fluid">
    <div class="box box-info">
        <div class="box-body">
            <div class="col-md-8">
                <H2>Edit info about event</H2>
                <form action="/event/<%=event.id%>/edit/" method="post">

                    <div class="clearfix"></div>
                    <div class="bot-border"></div>

                    <label for="name">Name:</label>
                        <input type='text' name='name' class='form-control' value="<%=event.name%>" required/>
                    <div class="clearfix"></div>
                    <div class="bot-border"></div>

                    <label for="place">Place:</label>
                    <input type='text' name='place' class='form-control' value="<%=event.place%>"/>
                    <div class="clearfix"></div>
                    <div class="bot-border"></div>

                    <label for="date">Date:</label>
                    <input type='date' name='date' class='form-control' value="<%=event.date%>" required/>
                    <div class="clearfix"></div>
                    <div class="bot-border"></div>

                    <label for="start_time">Start time:</label>
                    <input type='time' name='start_time' class='form-control' value="<%=event.start_time%>" step="300" required/>
                    <div class="clearfix"></div>
                    <div class="bot-border"></div>

                    <label for="end_time">End time:</label>
                    <input type='time' name='end_time' class='form-control' value="<%=event.end_time%>" step="300" required/>
                    <div class="clearfix"></div>
                    <div class="bot-border"></div>

                    <button class="btn btn-primary btn-block col-md-4" type="submit">Submit</button>
                </form>
                <form>
                    <button class="btn btn-danger btn-block col-md-4" formaction="/events/<%=event.id%>" formmethod="get">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
</body>
</html>