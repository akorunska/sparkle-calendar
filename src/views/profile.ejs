<% include partials/header %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <script src="/jq/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>

    <link href="stylesheets/profile.css" rel="stylesheet">
</head>
<body>
    <div class="box box-info">
        <div class="box-body">
            <div class="col-md-6">
                <img alt="user avatar" src="<%=user.profile_pic%>"
                     id="profile-image" class="img-circle">
            </div>
            <div class="col-md-6">
                <h2>Hello,
                    <%if(user.fullname) {%>
                        <%=user.fullname%>
                    <%} else {%>
                        <%=user.username%>
                    <%}%>
                    . <br> It`s your profile page</h2><br>
                <span><a href="/profile/edit">edit profile</a></span>
            </div>
                <div class="clearfix"></div>
                <hr>

                <div class="col-sm-5 col-xs-6 tital" >Username:</div>
                <div class="col-sm-7"> <%=user.username%> </div>
                <div class="clearfix"></div>
                <div class="bot-border"></div>

                <div class="col-sm-5 col-xs-6 tital" >Fullname:</div>
                <div class="col-sm-7"> <%if(user.fullname) { %> <%=user.fullname%> <% } else {%> none <%}%> </div>
                <div class="clearfix"></div>
                <div class="bot-border"></div>

                <div class="col-sm-5 col-xs-6 tital " >Email:</div>
                <div class="col-sm-7 col-xs-6 "><%if(user.email) { %> <%=user.email%> <% } else {%> none <%}%></div>
                <div class="clearfix"></div>
                <div class="bot-border"></div>

                <div class="col-sm-5 col-xs-6 tital " >Telegram:</div>
                <div class="col-sm-7"> <%if(user.telegram) { %> <%=user.telegram%> <%} else {%> none <%}%> </div>
                <div class="clearfix"></div>
                <div class="bot-border"></div>
        </div>
    </div>
</body>
</html>